<div class="ui card" id ="{{name}}">
  <div class="image">
    <img src="{{image}}">
  </div>
  <div class="content">
    <a class="header">{{fullname}}</a>
    <div class="meta">
      <span class="date"> {{timeServedSoFar joined}} employed</span>
    </div>
    <div class="description">
      {{name}} is a {{job}} from {{city}}
    </div>
  </div>
  <div class="extra content">
    <a>
      <i class="user icon"></i>
      {{mates}} Friends
    </a>
  </div>
</div>
