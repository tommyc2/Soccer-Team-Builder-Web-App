<form class="ui stacked segment form" action="/team/{{team.id}}/addplayer" method="POST">
  <div class="two fields">
    <div class="field">
      <label>Title</label>
      <input type="text" name="playerName" autofocus required title = "Please include a valid player name"
      placeholder="Player Name">
    </div>
    <div class="field">
      <label>Artist</label>
      <input type="text" name="artist" required title = "Please include a valid Artist"
      placeholder="Artist"  >
    </div>
  </div>
  <button class="ui blue submit button">Add Song</button>
</form>
